{
  "name": "simondevelop/slim-sim",
  "description": "Skeleton slim 4 with doctrine orm and other lib",
  "keywords": [
    "skeleton",
    "slim",
    "twig",
    "doctrine",
    "validation",
    "csrf",
    "token",
    "dotenv",
    "tracy",
    "session"
  ],
  "homepage": "https://github.com/SimonDevelop/slim-sim",
  "license": "MIT",
  "authors": [
    {
      "name": "SimonDevelop",
      "email": "contact@simon-micheneau.fr"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/src/",
      "Commands\\": "config/commands/"
    },
    "files": [
      "config/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "ext-json": "*",
    "php": ">=7.1",
    "slim/slim": "^4.5",
    "slim/psr7": "^0.6",
    "php-di/php-di": "^6.0",
    "slim/csrf": "^1.0",
    "slim/twig-view": "3.0",
    "respect/validation": "^1.1",
    "symfony/console": "^4.3",
    "digitalnature/php-ref": "^1.2",
    "vlucas/phpdotenv": "^3.6",
    "monolog/monolog": "^1.25",
    "doctrine/orm": "^2.6",
    "doctrine/migrations": "^2.1",
    "doctrine/data-fixtures": "^1.3",
    "twig/extensions": "^1.5",
    "symfony/translation": "^4.4",
    "symfony/twig-bridge": "^4.4",
    "symfony/yaml": "^4.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4",
    "phpunit/phpunit": "^7.5"
  },
  "config": {
    "process-timeout" : 0
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "start": "php -S localhost:8080 -t public public/server.php",
    "phpcs": "phpcs -s",
    "phpunit": "phpunit --colors",
    "test": [
      "@phpunit",
      "@phpcs"
    ]
  }
}
